<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_gravity="right"
    android:gravity="right"
    android:paddingBottom="5dp"
    android:paddingLeft="27dp"
    android:paddingTop="5dp"
    android:id="@+id/main">

    <RelativeLayout
        android:id="@+id/bubble_user"
        android:layout_width="250dp"
        android:layout_height="230dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/msg_out"
        android:gravity="end"
        android:paddingRight="5dp">

        <ImageView
            android:id="@+id/user_reply_status2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/dialogs_halfcheck"
            android:visibility="invisible"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_below="@+id/imageView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:id="@+id/user_reply_status"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/dialogs_check"
            android:visibility="invisible"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_below="@+id/imageView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"/>

        <ImageView
            android:id="@+id/user_reply_sent"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_dot1"
            android:visibility="visible"
            android:layout_marginRight="32dp"
            android:layout_marginEnd="32dp"
            android:layout_below="@+id/imageView4"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />



        <TextView
            android:id="@+id/user_reply_timing"
            style="@style/chat_timings"
            android:paddingBottom="5dp"
            android:text="17:10"
            android:textColor="@color/gray"
            android:layout_below="@+id/imageView4"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/user_reply_sent"
            android:layout_toStartOf="@+id/user_reply_sent" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            style="@style/chat_text_message_style"
            android:src="@drawable/ic_contact_picture_180_holo_light"
            android:id="@+id/imageView4"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</RelativeLayout>
